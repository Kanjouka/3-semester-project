@model Scheduler.ApiClient.Dto.LoginDto
@{
    ViewData["Title"] = "Log in";
}

<h1>Login</h1>

@if (!Context.User.Identity.IsAuthenticated)
{
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" asp-route-returnurl="@Context.Request.Query["ReturnUrl"]">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" type="email" placeholder="name@example.com" required />
                    <label asp-for="Email" class="control-label">Email address</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Password" class="form-control" type="password" placeholder="Password" required />
                    <label asp-for="Password" class="control-label">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <span style="background-color:wheat; color:red;">@ViewBag.ErrorMessage</span>
    <div>
        <a asp-action="Index" asp-controller="Home">Back to front page</a>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }