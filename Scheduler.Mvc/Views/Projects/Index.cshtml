@model Scheduler.Mvc.Models.ProjectView;
@{
	ViewData["Title"] = "index";
}

<h1>Projects</h1>

<div class="table-responsive mt-3">
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>ProjectID</th>
				<th>Name</th>
				<th>Start date</th>
				<th>End date</th>
				<th>Description</th>
				<th>Address</th>

			</tr>
		</thead>
		@if (Model == null)
		{
			<tbody>
				<tr>
					<td colspan="6">No projects</td>
				</tr>
			</tbody>
		}
		else
		{
			<tbody>
				@foreach (var project in ViewBag.Projects)
				{
					<tr>
						<td>@project.ProjectId</td>
						<td>@project.Name</td>
						<td>@project.StartDate</td>
						<td>@project.EndDate</td>
						<td>@project.Description</td>
						<td>@project.AddressView.City</td>
						<td>@project.AddressView.StreetNumber</td>
						<td>@project.AddressView.ZipCode</td>
					</tr>
				}
			</tbody>
		}
	</table>
</div>